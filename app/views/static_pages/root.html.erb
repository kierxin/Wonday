<% if logged_in? %>
    <script  type="text/javascript">

        window.currentUser = <%= render("api/users/user.json.jbuilder",
                                        user: current_user).html_safe %>

    </script>

    <% if current_user.latest_board %>
    <script>
            window.currentBoard = <%= render("/api/boards/board.json.jbuilder",
                                        board: current_board).html_safe %>
        
    </script>
    <% end %>
    
<% end %>


<main id="root"></main>